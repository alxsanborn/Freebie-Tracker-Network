<% if @user.admin == true %>
<h1>Brand Ambassador Homepage</h1>
<br>
<%= button_to "View All Freebies", items_path, method: :get %>
<%= button_to "Create a New Freebie", new_item_path, method: :get %>

<% else %>
<h1>Welcome Freebie Getter, <%= @user.name %> <br>
This is your profile, gurl!</h1>

<% if @user.items.empty? %>
You haven't collected any freebies yet :( <br>
Get on out there! Get some freebies!
<% else %>
<h2>Here's a list of your freebies!</h2>


<div class="container">
  <div class="row">
    <% @user.items.uniq.each do |item| %>
    <div class="col-sm-6">
      <br><h3>ğŸ˜¹ <%= link_to item.name, item_path(item) %></h3>
    </div>
    <div class="col-sm-6">
      <%= image_tag(item.image.url(:med)) %>
    </div>
    <% end %>
  </div>
</div>



<br>
<h3>Your status:</h3>
<%= @user.status_level %>
<% end %>
<br><br>
<% if session[:user_id] == params[:id].to_i %>
<%= button_to "Get Some Freebies!", items_path, method: :get %>
<% end %>
<% end %>
<br>
<p><%= link_to 'Log Out', signout_path %></p>
